@model Sistema_Indicadores.Models.SIPGUsuarios
@{
    Layout = null;
}

<!DOCTYPE html>
<!-- Marholy-->
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="cache-control" content="no-cache" />

    <title>Fruit Giddings México</title>
    @*  *@
    <!-- Styles -->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/css/fontAwesome/font-awesome.css" rel="stylesheet" />
    <link href="~/css/fontAwesome/font-awesome.min.css" rel="stylesheet" />

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="Content/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/Style/Index.css" rel="stylesheet" />

    <!-- Estilos modificados -->
    <link href="~/css/Pruebas.css" rel="stylesheet" />

    <style>
        .field-validation-error {
            color: red;
            font-style: italic;
        }
    </style>
</head>

<body class="login" style="background-color:WhiteSmoke">
    <section class="container" role="main" style="margin-top:-5%">
        <!-- Login header -->

        <div>
            <img class="login-logo" src="~/Image/GIDDINGS_PRIMARY_STACKED_LOGO_DRIFT_RGB.png" />
        </div>

        <div id="login-div">

            @using (Html.BeginForm("Home", "Login", FormMethod.Post))
            {
                <h5 style="padding:5px;color:MidnightBlue; font-weight:bold; font-style:italic"><i class="fab fa-raspberry-pi"></i> Indicadores GiddingsFruit</h5>
                <table>
                    <tr style="background-color:ghostwhite">
                        <td class="m-0 font-weight-bold text-secondary"><i class="fas fa-user"></i></td>
                        <td>
                            <input type="text" class="form-control form-control-sm" id="Nombre" name="Nombre" Style="text-transform: uppercase;" />
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.ValidationMessageFor(model => model.Nombre)</td>
                    </tr>
                    <tr style="background-color:ghostwhite">
                        <td class="m-0 font-weight-bold text-secondary"><i class="fas fa-key"></i></td>
                        <td> <input type="password" class="form-control form-control-sm" id="Clave" name="Clave" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.ValidationMessageFor(model => model.Clave)</td>
                    </tr>
                    <tr>
                        @*<td colspan="2">
                                <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                            </td>*@
                    </tr>
                    <tr>
                        <td></td>
                        @if (ViewBag.error != null)
                        {
                            <h6 class="alert alert-danger alert-dismissable"><i class="fas fa-times-circle"></i> @ViewBag.error</h6>
                        }
                        <td>
                            <button class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-lg" type="submit" name="name"><i class="fas fa-sign-in-alt"></i> ACCEDER</button>
                            @*<button class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-lg" type="reset" name="name"><i class="fas fa-times-circle"></i> CANCELAR</button>*@
                        </td>
                    </tr>
                </table>
            }
        </div>
    </section>


    <!-- Page level custom scripts -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/jquery/jquery.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Scripts/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Content/vendor/chart.js/Chart.min.js"></script>

    <!-- DateTime -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/locales/bootstrap-datepicker.es.min.js" charset="UTF-8"></script>

    @*<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script> *@
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>

    <!--Tablas editables-->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    @*<script src="~/Scripts/bootstrap3-editable/js/bootstrap-editable.js"></script>*@

    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.js"></script>

    <script src="~/Content/vendor/chart.js/Chart.min.js"></script>
    <script src="~/js/DataTables/jquery.dataTables.min.js"></script>
</body>
</html>