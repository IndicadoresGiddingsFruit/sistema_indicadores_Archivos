            error: function (xhr, err) {
                console.log("readyState: " + xhr.readyState + "\nstatus: " + xhr.status);
                console.log("responseText: " + xhr.responseText);
            }
        });
    }

    $('#status').change(function () {
        status = $("#status").val();
    });

    $('.status1').change(function () {
        status = $(this).find('option:selected').val();
    });

    function uptRow(currElement) {
        $("#dataTableData tr").click(function () {
            $(this).find("#Id").each(function () {
                update_data($(this).html(), 1);
            });
        });
    }

    $('.btn_edit').click(function () {
        event.preventDefault();
        var tbl_row = $(this).closest('tr');
        tbl_row.find('.btn_save').show();
        tbl_row.find('.btn_cancel').show();
        tbl_row.find('#statushide').show();
        tbl_row.find('#res_status').hide();
        tbl_row.find('.btn_edit').hide();
        tbl_row.find('.row_data').attr('contenteditable', 'true').attr('edit_type', 'button').css({ "padding": "3px", "border": "2px solid red" })
    });

    $('.btn_cancel').click(function () {
        event.preventDefault();
        var tbl_row = $(this).closest('tr');
        tbl_row.find('.btn_save').hide();
        tbl_row.find('.btn_cancel').hide();
        tbl_row.find('.btn_edit').show();
        tbl_row.find('#statushide').hide();
        tbl_row.find('#res_status').show();
        tbl_row.find('.row_data').attr('edit_type', 'click').css({ "padding": "", "border": "" })
    });

    $('.btn_save').click(function () {
        event.preventDefault();
        var tbl_row = $(this).closest('tr');
        tbl_row.find('.btn_save').hide();
        tbl_row.find('.btn_cancel').hide();
        tbl_row.find('.btn_edit').show();
        tbl_row.find('#statushide').hide();
        tbl_row.find('#res_status').show();
        tbl_row.find('.row_data').attr('edit_type', 'click').css({ "padding": "", "border": "" })

        tbl_row.find('.row_data').each(function (index, val) {
            var col_name = $(this).attr('col_name');
            var col_val = $(this).html().replace(/\n/g, '');
            arr[col_name] = col_val;
        });
        update_data(0, arr);
    });

    function update_data(id, arr) {
        var data = {};

        if (id != 0) {
            data = {
                Id: id,
                status: status,
                comentarios: $("#comentarios").val()
            };
        }
        else {
            id = arr.Id;
            var comnts = arr.coments;
            data = {
                Id: id,
                status: status,
                comentarios: comnts.split("                                                                          ").join("")
            };
        }

        jQuery.ajax({
            type: "POST",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify(data),
            url: siteURL + "Indicadores/Updt_Seguimiento",
            success: function (data) {
                window.location.reload();
            },
            error: function (xhr, err) {
                console.log("readyState: " + xhr.readyState + "\nstatus: " + xhr.status);
                console.log("responseText: " + xhr.responseText);
            }
        });
    }

    function mailRow(currElement) {
        $("#dataTableReport tr").click(function () {
            $(this).find("#Id").each(function () {
                send_mail($(this).html(), 1);
            });
        });
    }

    function send_mail(id, estatus) {
        var data = new Array();
        var tabla = new Array();

        if (id == 0) {
            $("#dataTableData tbody tr").each(function () {
                var row = $(this);
                var x = {};

                x.Id = row.find("#Id").html();
                x.IdAgen = row.find("#IdAgen").html();
                data.push(x);
            });

            $("#dataTableData tbody tr").each(function () {
                var row = $(this);
                var y = {};
                y.Cod_Prod = row.find("td")[1].innerHTML;
                y.Productor = row.find("td")[2].innerHTML;
                y.Campo = row.find("td")[3].innerHTML;
                y.IdAgen = row.find("td")[4].innerHTML;
                y.estatus = row.find("td")[7].innerHTML;
                y.comentarios = row.find("td")[8].innerHTML;
                y.caja1 = row.find("td")[10].innerHTML;
                y.caja2 = row.find("td")[11].innerHTML;
                tabla.push(y);
            });
        }
        if (estatus == "R") {

            $("#dataTableReport tbody tr").each(function () {
                var row = $(this);
                var x = {};
                var y = {};

