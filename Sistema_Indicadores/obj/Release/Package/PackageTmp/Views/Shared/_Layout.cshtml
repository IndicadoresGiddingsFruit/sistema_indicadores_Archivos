        function proximos_liberar() {
            $.getJSON(siteURL + "Home/Liberar_FLimite_List", function (result) {
                var proximos_liberar = result.proximos_liberar;

                if (proximos_liberar == 0) {
                    $('#counter_alert').hide();
                    $('#notif').hide();
                    $('#y_icon').hide();
                    $('#y_notificacion').hide();
                    $('#n_notificacion').show();
                    $('#n_icon').show();
                    $('#btn_notif').hide();
                }
